{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "verbatimModuleSyntax": false,
        "noUnusedParameters": false,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "~/pages/*": [
                "pages/*"
            ],
            "~/layouts/*": [
                "layouts/*"
            ],
            "~/sections/*": [
                "sections/*"
            ],
            "~/components/*": [
                "components/*"
            ],
            "~/assets/*": [
                "assets/*"
            ],
            "~/utils/*": [
                "utils/*"
            ]
        }
    },
    "include": [
        "src",
        "eslint.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
